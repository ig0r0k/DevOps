#!/bin/bash

sudo yum install gcc httpd-devel -y
cd /tmp
sudo curl -LO http://mirrors.ibiblio.org/apache/tomcat/tomcat-connectors/jk/tomcat-connectors-1.2.46-src.tar.gz
sudo tar xzvf tomcat-connectors*
cd tomcat-connectors*/native
sudo ./configure --with-apxs=/usr/bin/apxs
sudo make
sudo make install